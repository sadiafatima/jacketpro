<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Declarations>
		<s:RadioButtonGroup id="colourgrp" itemClick="handleColour(event);"/>
		<s:RadioButtonGroup id="materialgrp" itemClick="handleMaterial(event);"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
		
		import mx.events.ItemClickEvent;
		
		private function handleColour(event:ItemClickEvent):void {
                //Print the value of the selected RadioButton in the Text Area
                var colourValue:Object = colourgrp.selectedValue;
                colourTA.text="You selected " + colourValue;
		}
				
		private function handleMaterial(event:ItemClickEvent):void {
                //Print the value of the selected RadioButton in the Text Area
                var materialValue:Object = materialgrp.selectedValue;
                materialTA.text="You selected " + materialValue;
		}
		]]>
	</fx:Script>
	<s:HGroup horizontalAlign="center" height="400" width="600">
		<mx:Accordion id="accordian1" height="150" width="200">
			<s:NavigatorContent label="Choose Colour" width="200" height="200">
				<s:VGroup>
					<s:RadioButton group="{colourgrp}" id="red" label="Red" width="150"/>
					<s:RadioButton group="{colourgrp}" id="blue" label="Blue" width="150"/>
					<s:RadioButton group="{colourgrp}" id="green" label="Green" width="150"/>
				</s:VGroup>
			</s:NavigatorContent>
			<s:NavigatorContent label="Choose Material" width="200" height="200">
				<s:VGroup>
					<s:RadioButton group="{materialgrp}" id="fauxleather" label="Faux Leather" width="150"/>
					<s:RadioButton group="{materialgrp}" id="fauxsuede" label="Faux Suede" width="150"/>
					<s:RadioButton group="{materialgrp}" id="realleather" label="Real Leather" width="150"/>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:Accordion>
		<s:VGroup verticalAlign="middle">
			<s:TextArea id="colourTA" height="50" width="100" />
			<s:TextArea id="materialTA" height="50" width="100" />
		</s:VGroup>
	</s:HGroup>
</s:Application>